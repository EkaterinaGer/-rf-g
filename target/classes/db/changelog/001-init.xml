<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
         http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="001-create-site-table" author="system">
        <createTable tableName="site">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)"/>
            <column name="status_time" type="TIMESTAMP"/>
            <column name="last_error" type="TEXT"/>
            <column name="url" type="VARCHAR(255)"/>
            <column name="name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-page-table" author="system">
        <createTable tableName="page">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_page_site" references="site(id)"/>
            </column>
            <column name="path" type="VARCHAR(500)"/>
            <column name="code" type="INTEGER"/>
            <column name="content" type="TEXT"/>
        </createTable>
        <createIndex indexName="idx_path" tableName="page">
            <column name="path"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-create-lemma-table" author="system">
        <createTable tableName="lemma">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="lemma" type="VARCHAR(255)">
                <constraints unique="true"/>
            </column>
            <column name="frequency" type="INTEGER"/>
        </createTable>
    </changeSet>

    <changeSet id="004-create-search-index-table" author="system">
        <createTable tableName="search_index">
            <column name="id" type="SERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="page_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_index_page" references="page(id)"/>
            </column>
            <column name="lemma_id" type="INTEGER">
                <constraints nullable="false" foreignKeyName="fk_index_lemma" references="lemma(id)"/>
            </column>
            <column name="rank" type="FLOAT"/>
        </createTable>
    </changeSet>

</databaseChangeLog>
